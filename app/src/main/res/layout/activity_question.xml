<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.masatokg.revquizsound.QuestionActivity"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/txt_Quest"
        android:layout_width="296dp"
        android:layout_height="121dp"
        android:layout_marginBottom="46dp"
        android:layout_marginTop="49dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/lbl_Presenter"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCorrect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btnPresen"
        android:layout_width="139dp"
        android:layout_height="83dp"
        android:background="#637C35"
        android:text="@string/txtPresen"
        android:textColor="#FAFAFA"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="134dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_Quest"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnHakushu"
        app:layout_constraintVertical_bias="0.348" />

    <Button
        android:id="@+id/btnWrong"
        android:layout_width="142dp"
        android:layout_height="90dp"
        android:background="#CC0000"
        android:text="@string/wrong"
        android:textColor="#FAFAFA"
        android:textSize="24sp"
        android:layout_marginStart="39dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_Quest"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="39dp" />

    <Button
        android:id="@+id/btnCorrect"
        android:layout_width="130dp"
        android:layout_height="85dp"
        android:background="#5000CC"
        android:text="@string/right"
        android:textColor="#FAFAFA"
        android:textSize="24sp"
        android:layout_marginEnd="52dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="216dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="52dp"
        tools:layout_editor_absoluteX="418dp" />

    <Button
        android:id="@+id/btnHakushu"
        android:layout_width="138dp"
        android:layout_height="68dp"
        android:background="#ffff00"
        android:text="@string/hakushu"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="53dp" />

    <Button
        android:id="@+id/btnToAns"
        android:layout_width="146dp"
        android:layout_height="102dp"
        android:layout_marginStart="43dp"
        android:background="#999900"
        android:onClick="onAnsClick"
        android:text="@string/txtAnswer"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="43dp"
        tools:layout_editor_absoluteY="690dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="227dp"
        android:layout_height="165dp"
        app:srcCompat="@drawable/presenter"
        android:layout_marginEnd="32dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="32dp"
        tools:layout_editor_absoluteY="642dp"
        tools:layout_editor_absoluteX="341dp" />
</android.support.constraint.ConstraintLayout>
